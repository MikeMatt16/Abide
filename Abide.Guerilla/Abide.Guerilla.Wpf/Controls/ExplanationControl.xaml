<UserControl
             x:Class="Abide.Guerilla.Wpf.Controls.ExplanationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:VM="clr-namespace:Abide.Guerilla.Wpf.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="600" 
             Margin="4">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisibility"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <VM:ExplanationFieldModel/>
    </UserControl.DataContext>
    <Grid Background="{x:Static SystemColors.ControlLightBrush}">
        <Border BorderThickness="1" BorderBrush="Black"/>
        <StackPanel Orientation="Vertical" Margin="8" HorizontalAlignment="Left">
            <TextBlock Text="{Binding TagField.Name}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding Explanation}" Visibility="{Binding HasExplanation, Converter={StaticResource boolToVisibility}, Mode=OneWay}" Margin="0,0,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
